<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".pages.signup.SignUpSellerBusiness">

    <include
        android:id="@+id/constDesing"
        layout="@layout/activity_const_design" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:foreground="@drawable/main_icon"
                    android:orientation="horizontal" />

                <Spinner
                    android:id="@+id/categoryService"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/spinner_theme"
                    android:spinnerMode="dialog"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_hint" />

                <EditText
                    android:id="@+id/bsName"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/edittext_theme"
                    android:hint="@string/business_name"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_hint"
                    android:maxLength="35"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/bsWebsite"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/edittext_theme"
                    android:hint="@string/business_web"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_hint"
                    android:inputType="textUri"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/imageBussieness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/bsAbout"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext_theme"
                        android:hint="@string/about_yout_business"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_hint"
                        android:maxLength="250"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/uploadBusinessImage"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/take_photo"
                            android:contentDescription="TODO"
                            tools:ignore="ContentDescription" />

                        <Button
                            android:id="@+id/takePhoto"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Select IMG"
                            android:backgroundTint="@color/app_bar_color"
                            android:textColor="@color/white"/>


                    </LinearLayout>


                </LinearLayout>

                <Button
                    android:id="@+id/bsCreate"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/imageBussieness"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_decorator_button"
                    android:text="@string/create_account"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>






</RelativeLayout>